@model Mvc.Models.mvcFuncionarioModel
@{
    ViewBag.Title = "Home Page";
}

<body style="padding-top:60px">
    <div class="col-md-10 col-md-offset-1" align="center">
        <div class="well" align="center">
            <p align="center">Para criar movimentações, é necessário que o usuário esteja logado. Para fazer isso, primeiro crie um usuário novo: </p>
            <p align="center"><a href="@Url.Action("AddOrEdit","Home")" class="btn btn-default"> Criar novo funcionário</a></p>
            <p align="center">Agora basta se logar ou no canto direito superior da página</p>
            <p align="center"><a href="@Url.Action("Logar","Home")" class="btn btn-default"> Logar </a></p>
        </div>
    </div>
</body>
