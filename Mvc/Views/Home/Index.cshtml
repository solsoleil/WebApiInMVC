@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var failMessage = '@TempData["FailMessage"]';
            if (successMessage != '')
            {
                alertify.success(successMessage);
            }
            if (failMessage != '')
            {
                alertify.alert(failMessage);
            }
        });
    </script>
}
